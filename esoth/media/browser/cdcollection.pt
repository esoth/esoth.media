<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="esoth.media">
<body>
  <div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
                    tal:define="template_id string:@@cd-collection;
                                albums view/albums">
  
        <div tal:replace="structure provider:plone.abovecontenttitle" />
  
        <h1 class="documentFirstHeading"> 
            CD Collection
        </h1>
        
        <form tal:attributes="action string:${here/absolute_url}/$template_id">
        <table class="listing" id="cdfilter">
          <thead>
            <tr>
              <th>Artist</th>
              <th>Country</th>
              <th>Year</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <select name="artist" onchange="form.submit()">
                  <option></option>
                  <tal:opts repeat="opt view/artists">
                    <option tal:content="opt" tal:attributes="selected python:opt==view.request.get('artist') and 'selected'"/>
                  </tal:opts>
                </select>
              </td> 
              <td>
                <select name="country" onchange="form.submit()">
                  <option></option>
                  <tal:opts repeat="opt view/countries">
                    <option tal:content="opt" tal:attributes="selected python:opt==view.request.get('country') and 'selected'"/>
                  </tal:opts>
                </select>
              </td>
              <td>
                <select name="year" onchange="form.submit()">
                  <option></option>
                  <tal:opts repeat="opt view/years">
                    <option tal:content="opt" tal:attributes="selected python:opt==view.request.get('year') and 'selected'"/>
                  </tal:opts>
                </select>
              </td>
            </tr>
          </tbody>                
        </table>
        </form>


        <i tal:content="python:'Showing %d album%s' % (len(albums),len(albums)>1 and 's' or '')"/>
        <table class="listing" id="cdtable">
          <thead>
            <tr>
              <th>Artist</th>
              <th colspan="2">Album</th>
              <th>Country</th>
              <th>Year</th>
            </tr>
          </thead>
          <tbody>
            <tal:album repeat="album albums">
              <tr tal:attributes="href string:@@cd-view?uid=${album/UID}">
                <td tal:content="album/artist"/>
                <td>
                  <img class="cdIcon"
                       tal:condition="album/hasTag"
                       tal:attributes="src string:${album/getURL}/image_icon"/>
                </td>
                <td tal:content="album/Title"/>
                <td tal:content="python:'/'.join(album['country'])"/>
                <td tal:content="album/year"/>
              </tr>
            </tal:album>
          </tbody>
        </table>
    </tal:main-macro>
  </div>
</body>
</html>