<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core"
                        tal:define="kssClassesView context/@@kss_field_decorator_view;
                                    getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                    templateId template/getId;
                                    toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

        <div class="mediainfo">
          <table class="vertical listing">
						<tr>
							<th>Artist</th>
							<td tal:content="here/getArtist"/>
						</tr>
						<tr>
							<th>Country</th>
							<td tal:content="python:'/'.join(here.getCountry())"/>
						</tr>
						<tr>
							<th>Year</th>
							<td tal:content="here/getYear"/>
						</tr>
          </table>
        </div>
        <div tal:condition="here/getImage">
        	<img tal:replace="structure python:context.tag(scale='thumb', css_class='mediaImage')" src="" alt="" />
        </div>
        <div tal:condition="python:here.getImgUrl() and not here.getImage()">
        	<img tal:attributes="src here/getImgUrl"/>
        </div>

        
        <div tal:replace="structure here/getNotes"/>

        <span class="visualClear"><!-- --></span>

    </metal:content-core>
</metal:content-core>

</body>
</html>
